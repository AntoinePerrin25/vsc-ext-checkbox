{
  "name": "checkbox-display",
  "displayName": "Checkbox Display",
  "description": "Display interactive checkboxes in VS Code editor",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "checkbox-display.toggleCheckbox",
        "title": "Toggle Checkbox"
      }
      ,
      {
        "command": "checkbox-display.insertSnippet",
        "title": "Insert Checkbox Snippet"
      }
      ,
      {
        "command": "checkbox-display.goToCheckbox",
        "title": "Go to Checkbox"
      }
      ,
      {
        "command": "checkbox-display.toggleFromExplorer",
        "title": "Toggle Checkbox",
        "icon": "$(debug-step-over)"
      },
      {
        "command": "checkbox-display.setCheckboxValue",
        "title": "Set Checkbox Value"
      },
      {
        "command": "checkbox-display.searchCheckboxes",
        "title": "Search Checkboxes",
        "icon": "$(search)"
      },
      {
        "command": "checkbox-display.clearSearch",
        "title": "Clear Search",
        "icon": "$(close)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "checkbox-display.searchCheckboxes",
          "group": "navigation",
          "when": "view == checkbox-explorer"
        },
        {
          "command": "checkbox-display.clearSearch",
          "group": "navigation",
          "when": "view == checkbox-explorer"
        }
      ]
    },
    "keybindings": [
      {
        "command": "checkbox-display.toggleCheckbox",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus"
      }
      ,
      {
        "command": "checkbox-display.insertSnippet",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c",
        "when": "editorTextFocus"
      }
    ],
    "snippets": [
      {
        "language": "python",
        "path": "./snippets/checkboxes.code-snippets"
      },
      {
        "language": "javascript",
        "path": "./snippets/checkboxes.code-snippets"
      },
      {
        "language": "typescript",
        "path": "./snippets/checkboxes.code-snippets"
      },
      {
        "language": "c",
        "path": "./snippets/checkboxes.code-snippets"
      },
      {
        "language": "cpp",
        "path": "./snippets/checkboxes.code-snippets"
      },
      {
        "language": "java",
        "path": "./snippets/checkboxes.code-snippets"
      },
      {
        "language": "csharp",
        "path": "./snippets/checkboxes.code-snippets"
      },
      {
        "language": "go",
        "path": "./snippets/checkboxes.code-snippets"
      },
      {
        "language": "rust",
        "path": "./snippets/checkboxes.code-snippets"
      },
      {
        "language": "php",
        "path": "./snippets/checkboxes.code-snippets"
      },
      {
        "language": "ruby",
        "path": "./snippets/checkboxes.code-snippets"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "checkbox-explorer",
          "name": "Checkbox Explorer",
          "icon": "$(checklist)"
        }
      ]
    },
    "configuration": {
      "title": "Checkbox Display",
      "properties": {
        "checkbox-display.showCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Show 'Click to toggle' CodeLens above checkbox patterns"
        },
        "checkbox-display.uncheckedColor": {
          "type": "string",
          "default": "#757575",
          "description": "Color for unchecked checkbox symbol (☐)"
        },
        "checkbox-display.checkedColor": {
          "type": "string",
          "default": "#4CAF50",
          "description": "Color for checked checkbox symbol (☑)"
        },
        "checkbox-display.carouselColor": {
          "type": "string",
          "default": "#FF9800",
          "description": "Color for carousel number symbols (①②③...)"
        },
        "checkbox-display.validateValues": {
          "type": "boolean",
          "default": true,
          "description": "Show warning diagnostics when variable value doesn't match any carousel value"
        },
        "checkbox-display.autoSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically save the file after toggling a checkbox"
        },
        "checkbox-display.treeViewMode": {
          "type": "string",
          "enum": ["buttons", "list"],
          "default": "buttons",
          "description": "Display mode for checkbox items in the Checkbox Explorer sidebar: 'buttons' shows command buttons for each value, 'list' shows all values in a dropdown-like format"
        },
        "checkbox-display.searchCaseSensitive": {
          "type": "string",
          "enum": ["Prompt", "Case Sensitive", "Case Insensitive"],
          "default": "Case Insensitive",
          "description": "How to handle case sensitivity in Checkbox Explorer search: 'Prompt' asks each time, 'Case Sensitive' always matches case, 'Case Insensitive' ignores case"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AntoinePerrin25/vsc-ext-checkbox.git"
  },
  "publisher": "antoineperrin"
}